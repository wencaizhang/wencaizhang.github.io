.content pre, .content pre[class*="language-"]
  position: relative;
  padding: 3em 1.5em 1.5em;
  margin: .5em 0;
  overflow: auto;
  border-radius: 6px;

div[class*="language-"].line-numbers-mode::after
  position: absolute;
  top: 16px;
  left: 18px;
  content: "";
  width: 11px;
  height: 11px;
  border-radius: 50%;
  background-color: #ff5f56;
  -webkit-box-shadow: 18px 0 0 0 #ffbd2e, 36px 0 0 0 #27c93f;
  box-shadow: 18px 0 0 0 #ffbd2e, 36px 0 0 0 #27c93f;

div[class*=language-].line-numbers-mode .line-numbers-wrapper
  top 1.6rem!important
  border-right 1px solid rgba(0,0,0,0.66)
  padding 0!important
  margin 1.35rem 0
  z-index 11
  background-color #282c34

div[class*="language-"]::before
  top: 1em;
  left: 6.4em;

// 复制按钮
.btn-copy
  position: absolute;
  z-index: 3;
  top: 0.8em;
  right: 1em;
  font-size: 0.75rem;
  cursor: pointer;
  color: rgba(255,255,255,0.4);

// QR
#qrcode
  position: absolute;
  left: 160px;
  top: 0;
  z-index: 101;
  width: 100px;
  height: 100px;

#qrcode img
  width: 100%;
  height: 100%;